{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "airbnb-base",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "camelcase": "off",
    "no-console": "off",
    "class-methods-use-this": "off",
    "import/no-unresolved": "off",
    "import/no-dynamic-require": "off",
    "import/prefer-default-export": "off",
    "import/first": "off",
    "comma-dangle": ["error", "never"],
    "eqeqeq": "off",
    "global-require": "off",
    "indent": ["error", 4],
    "new-cap": [
      "error",
      {
        "newIsCapExceptions": ["ajv", "jwt", "shim"],
        "capIsNewExceptions": ["STRING", "ENUM"]
      }
    ],
    "no-underscore-dangle": [
      2,
      {
        "allowAfterThis": true
      }
    ],
    "no-useless-escape": "off",
    "max-len": ["error", 200],
    "prefer-destructuring": "off",
    "no-param-reassign": "off",
    "quotes": ["error", "backtick"]
  }
}
